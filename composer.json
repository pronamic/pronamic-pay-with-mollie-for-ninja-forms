{
	"name": "pronamic/wp-pronamic-pay-with-mollie-for-ninja-forms",
	"description": "Pronamic Pay plugin with Mollie for Ninja Forms integration.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"automattic/jetpack-autoloader": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"roots/wordpress-core-installer": true
		},
		"platform": {
			"php": "8.2"
		},
		"platform-check": false,
		"sort-packages": true,
		"wp-slug": "pronamic-pay-with-mollie-for-ninja-forms"
	},
	"extra": {
		"installer-paths": {
			"packages/{$vendor}/{$name}": [
				"vendor:pronamic",
				"vendor:wp-pay",
				"vendor:wp-pay-extensions",
				"vendor:wp-pay-gateways",
				"woocommerce/action-scheduler"
			]
		}
	},
	"require": {
		"php": ">=8.2",
		"automattic/jetpack-autoloader": "^5.0",
		"composer/installers": "^2.3",
		"woocommerce/action-scheduler": "^3.9",
		"wp-pay-extensions/ninjaforms": "^3.3",
		"wp-pay-gateways/mollie": "^4.17",
		"wp-pay/core": "^4.28"
	},
	"require-dev": {
		"pronamic/changelog-md-to-wordpress-plugin-readme-txt": "dev-main",
		"pronamic/pronamic-cli": "^1.1",
		"pronamic/wp-coding-standards": "^2.4",
		"roots/wordpress-no-content": "^6.8",
		"wp-cli/dist-archive-command": "*",
		"wp-cli/wp-cli-bundle": "*"
	},
	"scripts": {
		"phpcs": "vendor/bin/phpcs -s -v --ignore=packages,build",
		"build": [
			"Pronamic\\ChangelogMdToWordPressPluginReadmeTxt\\Synchronizer::run",
			"vendor/bin/pronamic wp-build --text-domain-fixer=phpcs-text-domain-fixer.xml"
		],
		"translate": [
			"@build",
			"rsync --recursive --delete --verbose ./build/project/languages/ ./languages/",
			"@update-po"
		],
		"update-po": "find languages/*.po -type f -exec msgmerge --update --backup=off {} languages/pronamic-pay-with-mollie-for-ninja-forms.pot \\;",
		"version": "@build",
		"release": [
			"@build",
			"vendor/bin/pronamic release-to-github",
			"vendor/bin/pronamic release-to-pronamic"
		]
	}
}
